<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sois.timetablescheduler.Add_day"
    android:background="@drawable/back2">

    <TextView
        android:text="Check working Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:typeface="serif" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@drawable/custom_button"
        android:onClick="Submit"
        android:typeface="serif"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmon"
        android:typeface="serif"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="69dp" />

    <CheckBox
        android:text="Tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ctue"
        android:typeface="serif"
        android:layout_below="@+id/cmon"
        android:layout_alignLeft="@+id/cmon"
        android:layout_alignStart="@+id/cmon"
        android:layout_marginTop="12dp" />

    <CheckBox
        android:text="Wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cwed"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ctue"
        android:layout_alignStart="@+id/ctue" />

    <CheckBox
        android:text="Thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cthu"
        android:typeface="serif"
        android:layout_below="@+id/cwed"
        android:layout_alignLeft="@+id/cwed"
        android:layout_alignStart="@+id/cwed"
        android:layout_marginTop="13dp" />

    <CheckBox
        android:text="Saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csat"
        android:typeface="serif"
        android:layout_below="@+id/cfri"
        android:layout_alignLeft="@+id/cfri"
        android:layout_alignStart="@+id/cfri"
        android:layout_marginTop="17dp" />

    <CheckBox
        android:text="Sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csun"
        android:typeface="serif"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/csat"
        android:layout_alignLeft="@+id/csat"
        android:layout_alignStart="@+id/csat" />

    <CheckBox
        android:text="Friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cfri"
        android:typeface="serif"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/cthu"
        android:layout_alignLeft="@+id/cthu"
        android:layout_alignStart="@+id/cthu" />

</RelativeLayout>
